# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------
# API Base URL (use http://localhost:4000/api for local development)
# When deployed to Vercel, use /api (served from same domain)
VITE_API_URL=http://localhost:4000/api

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
PORT=4000

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (NEON POSTGRES)
# -----------------------------------------------------------------------------
# Get your connection string from Neon dashboard
# Format: postgresql://username:password@host/neondb?sslmode=require
DATABASE_URL=postgresql://username:password@host/neondb?sslmode=require

# -----------------------------------------------------------------------------
# OPENROUTE API (For AI Content Generation)
# -----------------------------------------------------------------------------
# Get your free API key at https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# -----------------------------------------------------------------------------
# ADMIN CREDENTIALS (Development only!)
# -----------------------------------------------------------------------------
# Change these in production!
ADMIN_EMAIL=api@portfolio.dev
ADMIN_PASSWORD=admin123
